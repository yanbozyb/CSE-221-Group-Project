\lstdefinestyle{codecpp}{
        language=C++,
        tabsize=4,
        basicstyle=\ttfamily\footnotesize,columns=fullflexible,
        breaklines=true,
		basicstyle=\small\linespread{1}\color{normal}\ttfamily,
		keywordstyle=\color{keycolor}\ttfamily,	% 
		stringstyle=\color{string}\ttfamily,
		commentstyle=\color{comment}\ttfamily,	% 
        identifierstyle=\color{identifier}\ttfamily,
        showstringspaces=false,
}
\lstnewenvironment{cpp}[1][]{\lstset{style=codecpp,caption={[#1]{#1}}}}{}
\lstnewenvironment{cppn}[1][]{\lstset{style=codecpp, numbers=left,caption={[#1]{#1}}}}{}
\lstnewenvironment{cc}[1][]{\lstset{style=codecpp,caption={[#1]{#1}}}}{}

\lstdefinestyle{codebash}{
        language=bash,
        tabsize=4,
        basicstyle=\ttfamily\footnotesize,
        breaklines=true,
}
\lstnewenvironment{bash}[1][]{\lstset{style=codebash,caption={[#1]{#1}}}}{}

